<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Profile | Feed</title>
</head>

<body class="bg-gray-50 font-sans antialiased text-gray-900">

    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-10">
        <div class="max-w-4xl mx-auto px-4 py-3 flex justify-between items-center">
            <h1 class="text-2xl font-black tracking-tighter text-blue-600">MYSOCIAL</h1>
            <div class="flex items-center gap-4">
                <span class="text-sm font-medium text-gray-500">@<%= user.username %></span>
                <a href="/logout"
                    class="text-sm font-semibold text-red-500 hover:bg-red-50 px-3 py-1.5 rounded-lg transition">Logout</a>
            </div>
        </div>
    </nav>

    <div class="max-w-2xl mx-auto px-4 py-8">
        <!-- Welcome Header -->
        <div class="mb-8">
            <h2 class="text-3xl font-bold">Hello, <%= user.name %> üëãüèª</h2>
            <p class="text-gray-500">What's the latest update today?</p>
        </div>

        <!-- Create Post Card -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-12">
            <form action="/create-post" method="POST" class="space-y-4">
                <input type="text" name="title" placeholder="Post Title" required
                    class="w-full text-lg font-semibold placeholder-gray-400 outline-none border-b border-transparent focus:border-blue-500 pb-2 transition">

                <textarea name="content" rows="3" placeholder="Share your thoughts..." required
                    class="w-full resize-none placeholder-gray-400 outline-none text-gray-700"></textarea>

                <div class="flex justify-between items-center pt-4 border-t border-gray-50">
                    <div class="flex gap-2 text-gray-400">
                        <button type="button" class="hover:text-blue-500"><svg class="w-5 h-5" fill="none"
                                stroke="currentColor" viewBox="0 0 24 24">
                                <path
                                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                                </path>
                            </svg></button>
                    </div>
                    <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-full font-bold shadow-md shadow-blue-200 transition active:scale-95">
                        Post Now
                    </button>
                </div>
            </form>
        </div>

        <!-- Posts Feed -->
        <div class="space-y-6">
            <div class="flex items-center gap-4 mb-4">
                <h3 class="text-xl font-bold text-gray-800">Your Timeline</h3>
                <div class="h-px flex-1 bg-gray-200"></div>
            </div>

            <!-- Post Item -->
            <% user.posts.reverse().forEach(function(post){ %>

                <div
                    class="bg-white border border-gray-200 rounded-2xl p-6 hover:shadow-lg transition-shadow duration-300">
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <h4 class="font-bold text-blue-600 text-sm">@<%= user.username %>
                            </h4>
                            <!-- <p class="text-xs text-gray-400">2 hours ago</p> -->
                        </div>
                        <span
                            class="bg-gray-100 text-gray-500 text-[10px] px-2 py-1 rounded-full uppercase font-bold tracking-widest">Public</span>
                    </div>

                    <h3 class="text-xl font-bold text-gray-900 mb-2">
                        <%= post.title%>
                    </h3>
                    <p class="text-gray-600 leading-relaxed mb-6">
                        <%= post.content%>
                    </p>

                    <div class="flex items-center justify-between pt-4 border-t border-gray-50">
                        <div class="flex gap-6">
                            <a href="/like/<%= post._id%>"
                                class="flex items-center gap-1.5 text-gray-500 hover:text-rose-500 transition font-medium text-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z">
                                    </path>
                                </svg>
                                <span>
                                    <span>
                                        <%= post.likes.length %>
                                    </span>
                                    <%= post.likes.indexOf(user._id) === -1 ? "Like" : ""%>
                                </span>
                            </a>
                            <a href="/edit/<%= post._id%>"
                                class="flex items-center gap-1.5 text-gray-500 hover:text-blue-500 transition font-medium text-sm">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                    </path>
                                </svg>
                                <span>Edit</span>
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>

                    <!-- Repeat Post Item for dynamic data -->
        </div>
    </div>
</body>

</html>